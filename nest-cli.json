{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "watchOptions": {
    "ignored": [
      "node_modules",
      "dist",
      "client",
      ".git",
      "logs/*",
      "*.test.ts",
      "*.tmp"
    ]
  }
}
